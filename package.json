{
  "name": "context-engineering-mcp-server",
  "version": "1.0.0",
  "description": "Context engineering methodology MCP server for creating comprehensive Product Requirements Prompts.",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"src/\"",
    "test:integration": "jest --testPathPattern=\"test/integration\"",
    "test:e2e": "jest --testPathPattern=\"test/e2e\"",
    "test:performance": "jest --testPathPattern=\"test/performance\" --runInBand --detectOpenHandles",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --coverage --ci --watchAll=false --maxWorkers=2",
    "coverage-report": "node scripts/test-coverage-report.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "sync-templates": "./scripts/sync-templates.sh",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test:all",
    "prepare": "npm run build",
    "precommit": "npm run lint && npm run type-check",
    "prepush": "npm run validate"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@typescript-eslint/typescript-estree": "^6.12.0",
    "acorn": "^8.11.2",
    "acorn-walk": "^8.3.4",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "mcp",
    "context-engineering",
    "prp",
    "requirements",
    "prompts",
    "ai",
    "cole-medin",
    "model-context-protocol",
    "automation"
  ],
  "author": "Locomotive Agency <info@locomotive.agency>",
  "contributors": [
    "Cole Medin <https://github.com/coleam00> (original methodology)",
    "croakingtoad <https://github.com/croakingtoad> (project coordination)",
    "Claude/Anthropic (MCP implementation)"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/croakingtoad/context-engineering-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/croakingtoad/context-engineering-mcp/issues"
  },
  "homepage": "https://github.com/croakingtoad/context-engineering-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
